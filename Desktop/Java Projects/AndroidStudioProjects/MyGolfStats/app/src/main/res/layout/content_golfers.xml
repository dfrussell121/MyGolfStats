<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GolfersActivity"
    tools:showIn="@layout/activity_golfers">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textGolferScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/GolferScreen"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textGolferScreen"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:text="@string/FirstName"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignRight="@+id/textGolferScreen" />

        <TextView
            android:id="@+id/textSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textGolferScreen"
            android:layout_alignParentTop="true"
            android:layout_marginTop="151dp"
            android:text="@string/Surname"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignRight="@+id/textGolferScreen" />

        <TextView
            android:id="@+id/textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textGolferScreen"
            android:layout_alignParentTop="true"
            android:layout_marginTop="224dp"
            android:text="@string/GolferID"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_alignRight="@+id/textGolferScreen" />

        <EditText
            android:id="@+id/editFirstName"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignParentRight="true" />

        <EditText
            android:id="@+id/editSurname"
            android:layout_width="262dp"
            android:layout_height="57dp"
            android:layout_alignBottom="@+id/textSurname"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-12dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editId"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonAddGolfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textId"
            android:layout_marginBottom="142dp"
            android:text="@string/AddButton"
            android:layout_alignLeft="@+id/textId" />

        <Button
            android:id="@+id/buttonViewGolfers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/buttonAddGolfer"
            android:layout_marginEnd="61dp"
            android:text="@string/ViewListButton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="61dp" />

        <Button
            android:id="@+id/buttonUpdateGolfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textId"
            android:layout_marginBottom="53dp"
            android:text="@string/UpdateButton"
            android:layout_alignLeft="@+id/textId" />

        <Button
            android:id="@+id/buttonDeleteGolfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonViewGolfers"
            android:layout_alignTop="@+id/buttonUpdateGolfer"
            android:text="@string/DeleteButton"
            android:layout_alignLeft="@+id/buttonViewGolfers" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>